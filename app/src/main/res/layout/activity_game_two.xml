<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryColor"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#00468c"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/ic_array_back"/>

        <TextView
            android:id="@+id/ic_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/exit"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />


    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:progress="10"
        android:max="20"

        app:indicatorColor="#FFC107"
        app:trackColor="@color/primaryColor"

        android:id="@+id/quiz_timer"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="100dp">

       <ImageView
           android:id="@+id/btnPause"
           android:layout_width="@dimen/_40sdp"
           android:layout_height="@dimen/_40sdp"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="@dimen/_90sdp"
           android:layout_marginTop="@dimen/_30sdp"
           android:src="@drawable/ic_pause_white" />

       <TextView
           android:layout_width="wrap_content"
           android:id="@+id/txtScore"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginTop="@dimen/_30sdp"
           android:layout_marginRight="@dimen/_90sdp"
           android:text="120"
           android:textColor="@color/green"
           android:textSize="@dimen/_30sdp"
           />

   </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_option1"
            android:textColor="@color/black"
            android:text="A"
            android:layout_gravity="center"
            />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/card2"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_option2"
            android:textColor="@color/black"
            android:text="d"
            android:layout_gravity="center"
            />


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:id="@+id/card3"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_option3"
            android:textColor="@color/black"
            android:text="d"
            android:layout_gravity="center"
            />


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:id="@+id/card4"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_option4"
            android:textColor="@color/black"
            android:text="Keine Option is richtig"
            android:layout_gravity="center"
            />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/nextBtn"
        android:layout_height="@dimen/_50sdp"

        android:layout_marginStart="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_35sdp"
        android:background="@drawable/next_btn_shape"
        android:gravity="center"
        android:layout_marginTop="@dimen/_50sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/next"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/white"/>

    </LinearLayout>



</LinearLayout>